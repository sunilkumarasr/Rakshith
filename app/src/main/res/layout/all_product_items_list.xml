<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="7dp"
    android:background="@drawable/edge_items_light_gray"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgProducts"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/logo" />
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/circle_fav"
                    android:layout_alignParentEnd="true"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/favorite_ic"
                        app:tint="@color/colorPrimary" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/offerlable"
                android:backgroundTint="@color/selectedRed"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtLabelOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:fontFamily="@font/teachers_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="OFF"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:fontFamily="@font/teachers_bold"/>
            </LinearLayout>
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/teachers_medium"
            android:text="@string/title"
            android:textColor="@color/txtHeader"
            android:maxLines="2"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOfferPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/teachers_medium"
                android:text="@string/actuleprice"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtActualPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/teachers_regular"
                android:text="@string/actuleprice"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/teachers_regular"
            android:textColor="@color/txtHeader"
            android:textSize="12sp"
            android:text="o"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="invisible"
                android:id="@+id/txtTotalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/teachers_medium"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linearCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/linearDecrement"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/min_remove">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/minimize_ic"
                        app:tint="@color/white"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/cartQty"
                    android:layout_width="25dp"
                    android:layout_height="21dp"
                    android:text="0"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/teachers_semibold"/>
                <LinearLayout
                    android:id="@+id/linearIncrement"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/min_remove">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/plus_ic"
                        app:tint="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/add_cart_round"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/teachers_medium"
                    android:text="@string/add"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>